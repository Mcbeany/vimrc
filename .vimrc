set autoread
set autowrite
set backspace=indent,eol,start
set belloff=all
set cursorline
set encoding=utf-8
set expandtab
set hidden
set ignorecase
set laststatus=2
set linebreak
set nocompatible
set number
set relativenumber
set ruler
set shiftwidth=2
set showmatch
set smartcase
set smartindent
set noswapfile
set tabstop=2
set updatetime=300

syntax on
filetype plugin indent on
